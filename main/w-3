#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "Rus");
    int number;
    int count = 0;
    int sum = 0;

    cout << "Введите число: ";
    cin >> number;

    while (number != 0) {
        count = count + 1;  
        sum = sum + number; 

        cout << "Введите число: ";
        cin >> number;      
    }

    cout << "[ + ] Количество чисел: " << count << endl;
    cout << "[ + ] Сумма: " << sum << endl;

    return 0;
}
