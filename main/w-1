#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");

    int number, sum = 0;

    cout << "Введите число: ";
    cin >> number;

    while (number != 0) {
        sum += number;
        cout << "Введите число: ";
        cin >> number;
    }

    cout << "Сумма: " << sum << endl;

    return 0;
}
