#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "ru");
    int menu;

    while (true) {
        cout << "[ + ] Программа - \"Геометрические фигуры\"" << endl;
        cout << endl;
        cout << "[ 1 ] Линия" << endl;
        cout << "[ 2 ] Выйти" << endl;
        cout << endl;
        cout << "[ + ] Выберите фигуру: ";
        cin >> menu;

        if (menu == 2) {
            cout << "Выход..." << endl;
            break;
        }

        if (menu == 1) {
            cout << endl;
            cout << "[ + ] Фигура: \"Линия\"" << endl;
            cout << endl;
            cout << "[ 1 ] Горизонтальная" << endl;
            cout << "[ 2 ] Вертикальная" << endl;
            cout << endl;
            cout << "[ + ] Выберите тип: ";

            int lineType;
            cin >> lineType;

            if (lineType == 1 || lineType == 2) {
                int length;
                char texture = '#';

                cout << endl;
                cout << "[ + ] Длина линии: ";
                cin >> length;
                cout << "[ + ] Текстура линии: ";

                cout << endl;
                cout << "[ + ] Результат:" << endl;
                cout << endl;

                if (lineType == 1) {
                    for (int i = 0; i < length; i++) {
                        cout << texture << " ";
                    }
                }
                else {
                    for (int i = 0; i < length; i++) {
                        cout << texture << endl;
                    }
                }

                cout << endl;
                cout << endl;

            }
            else {
                cout << "Неверный выбор типа линии!" << endl;
            }
        }
        else {
            cout << "Неверный выбор фигуры!" << endl;
        }
    }

    return 0;
}
