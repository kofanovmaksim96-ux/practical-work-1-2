#include <iostream>  
using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");
    int n;

     
    do {
        cout << "Введите число от 1 до 15: ";
        cin >> n;
    } while (n < 1 || n > 15);

   
    int count = 0;

    
    while (count < n) {
        cout << "Это сообщение выводится " << (count + 1) << " раз" << endl;
        count++;
    }

    return 0;
}
