#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "Rus");
    int number;
    int count = 0;

    cout << "Введите число: ";
    cin >> number;

   
    if (number == 0) {
        count = 1;
    }
    else {
        
        while (number != 0) {
            number = number / 10;  
            count = count + 1;     
        }
    }

    cout << "[ + ] Количество цифр: " << count << endl;

    return 0;
}
