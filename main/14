#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "Rus");
    int width, height;
    char texture;

    cout << "Ширина: ";
    cin >> width;
    cout << "Высота: ";
    cin >> height;
    cout << "Текстура: ";
    cin >> texture;

    cout << endl;

    for (int i = 0; i < height; i++) {
        for (int j = 0; j < width; j++) {
            if (i == 0 || i == height - 1 || j == 0 || j == width - 1) {
                cout << texture << " ";
            }
            else {
                cout << ". ";
            }
        }
        cout << endl;
    }

    return 0;
}
